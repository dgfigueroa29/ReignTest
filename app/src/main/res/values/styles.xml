<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/material_padding</item>
        <item name="drawableStartCompat">@drawable/ic_back_24</item>
        <item name="android:text">@string/back</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Dialog.Title">
        <item name="android:layout_marginBottom">34dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">left</item>
        <item name="android:text">@string/delete_news</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dialog.Button">
        <item name="android:background">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:text">@string/cancel</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:enabled">true</item>
    </style>
</resources>